---
import SocialMedia from "../components/SocialMedia.astro";
---

<section class="max-w-7xl m-auto mb-12">
  <h2
    class="font-cinzel uppercase text-center py-5 text-2xl md:text-4xl font-normal bg-principal text-dorado tracking-widest"
  >
    Contacto
  </h2>

  <div
    class="flex flex-row justify-center items-start gap-6 bg-principal rounded-md p-5 w-1/2 m-auto py-12 px-10"
  >
    <div class="w-full py-5 px-5 border-dorado rounded-md border box-border">
      <form action="">
        <div>
          <label for="name" class="text-dorado font-inter font-light text-xl"
            >Tu nombre</label
          >
          <input
            type="text"
            id="name"
            name="name"
            class="block border border-dorado p-1 rounded-sm w-full my-1.5"
          />
        </div>
        <div>
          <label for="name" class="text-dorado font-inter font-light text-xl"
            >Tu correo</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="block border border-dorado p-1 rounded-sm w-full my-1.5"
          />
        </div>
        <div>
          <label
            for="message"
            class="text-dorado font-inter font-light text-xl w-full"
            >Tu mensaje</label
          >
          <textarea
            id="message"
            name="message"
            class="block border border-dorado p-1 rounded-sm w-full my-1.5"
          ></textarea>
        </div>
        <button
          type="submit"
          class="mt-3 bg-dorado rounded-sm p-4 text-principal hover:bg-dorado hover:saturate-150 transition cursor-pointer font-inter font-medium text-sm w-full"
        >
          Enviar Mensaje
        </button>
      </form>
    </div>

    <div class="flex flex-col gap-2 w-full">
      <h3 class="text-dorado font-playfair text-xl">Información</h3>
      <p class="text-gris font-inter text-md font-light">
        Reserva tu cita o contáctanos por los siguientes medios:
      </p>

      <ul class="flex flex-col gap-3 mt-3">
        <li>
          <nav area-label="whatsapp">
            <a
              href="https://wa.me/573013634888"
              target="_blank"
              class="flex flex-row items-center gap-2 text-gris font-inter text-md font-light hover:text-dorado transition"
            >
              <svg
                aria-label="WhatsApp"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="w-6 h-6 text-dorado object-contain"
                fill="currentColor"
              >
                <path
                  d="M12.04 2C6.5 2 2 6.44 2 11.92c0 2.1.62 4.05 1.7 5.7L2 22l4.5-1.66a10.1 10.1 0 0 0 5.54 1.58c5.54 0 10.04-4.44 10.04-9.92C22.08 6.44 17.58 2 12.04 2zm0 17.85c-1.78 0-3.42-.52-4.82-1.43l-.34-.2-2.67.98.72-2.55-.22-.36a8.33 8.33 0 0 1-1.29-4.37c0-4.6 3.77-8.33 8.42-8.33 2.25 0 4.36.87 5.95 2.45a8.26 8.26 0 0 1 2.47 5.88c0 4.6-3.77 8.33-8.42 8.33zm4.57-6.25c-.25-.13-1.5-.74-1.73-.82-.23-.09-.4-.13-.56.13-.16.26-.65.82-.8.98-.15.16-.29.18-.54.06-.25-.13-1.02-.37-1.94-1.17-.72-.64-1.22-1.42-1.36-1.66-.14-.24-.01-.38.12-.51.12-.12.27-.3.39-.45.13-.15.18-.26.27-.43.09-.17.04-.32-.02-.45-.06-.13-.56-1.35-.77-1.84-.2-.48-.41-.42-.56-.43h-.48c-.17 0-.44.06-.67.31-.23.25-.87.85-.87 2.05s.9 2.39 1.02 2.55c.12.16 1.74 2.65 4.3 3.72.61.26 1.09.41 1.46.54.61.2 1.16.17 1.6.1.49-.07 1.48-.6 1.68-1.18.21-.57.21-1.05.15-1.16-.06-.11-.22-.17-.47-.3z"
                ></path>
              </svg>

              <span class="text-gris font-inter text-md font-light"
                >WhatsApp</span
              >
            </a>
          </nav>
        </li>

        <li>
          <nav>
            <a
              href="tel:+573013634888"
              class="flex flex-row items-center gap-2 text-gris font-inter text-md font-light hover:text-dorado transition"
            >
              <svg
                aria-label="Teléfono"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="w-6 h-6 text-dorado object-contain"
                fill="currentColor"
              >
                <path
                  d="M6.62 10.79a15.053 15.053 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.05-.24c1.12.37 2.33.57 3.54.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1C10.61 21 3 13.39 3 4a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.21.2 2.42.57 3.54.11.35.03.74-.24 1.01l-2.21 2.24z"
                ></path>
              </svg>

              <span class="text-gris font-inter text-md font-light"
                >+00 000 00000</span
              >
            </a>
          </nav>
        </li>

        <li>
          <nav>
            <a
              href="/"
              class="flex flex-row items-center gap-2 text-gris font-inter text-md font-light hover:text-dorado transition"
            >
              <svg
                aria-label="Instagram"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="w-6 h-6 text-dorado object-contain"
                fill="currentColor"
              >
                <path
                  d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.25-.88a1.13 1.13 0 1 1 0 2.25 1.13 1.13 0 0 1 0-2.25z"
                ></path>
              </svg>

              <span class="text-gris font-inter text-md font-light"
                >@catalina_romo_peluqueria</span
              >
            </a>
          </nav>
        </li>

        <li>
          <nav>
            <a
              href="/"
              class="flex flex-row items-center gap-2 text-gris font-inter text-md font-light hover:text-dorado transition"
            >
              <svg
                aria-label="Facebook"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="w-6 h-6 text-dorado object-contain"
                fill="currentColor"
              >
                <path
                  d="M22 12a10 10 0 1 0-11.5 9.9v-7h-2v-3h2v-2.3c0-2 1.2-3.1 3-3.1.9 0 1.8.16 1.8.16v2h-1c-1 0-1.3.63-1.3 1.3V12h2.3l-.37 3h-1.9v7A10 10 0 0 0 22 12z"
                ></path>
              </svg>

              <span class="text-gris font-inter text-md font-light"
                >Peluqueria Catalina Romo</span
              >
            </a>
          </nav>
        </li>
      </ul>
    </div>
  </div>
</section>
