---
const SERVICIOS = [
  {
    title: "Corte de Cabello",
    img: "/icons/haircutting.png",
    alt: "Corte de Cabello",
    description: "Descripción del servicio",
  },
  {
    title: "Teñido de Cabello",
    img: "/icons/hair-care.png",
    alt: "Tinte de Cabello",
    description: "Descripción del servicio",
  },
  {
    title: "Manicure",
    img: "/icons/manicure.png",
    alt: "Manicure",
    description: "Descripción del servicio",
  },
  {
    title: "Maquillaje",
    img: "/icons/makeover.png",
    alt: "Maquillaje",
    description: "Descripción del servicio",
  },
];
---

<section class="max-w-7xl m-auto">
  <h2
    class="font-cinzel uppercase text-center py-5 text-2xl md:text-4xl font-normal bg-principal tracking-widest text-dorado"
  >
    Servicios
  </h2>

  <div
    class="flex md:grid md:grid-cols-2 snap-x snap-mandatory overflow-x-auto bg-principal"
  >
    {
      SERVICIOS.map(({ img, alt, description, title }) => (
        <div class="flex-none md:flex md:flex-row md:aspect-[2/1] box-border mb-3 mx-3 last:mb-0 md:m-0 snap-center md:snap-none w-[80%] md:w-full md:mb-3 border-2 border-dorado">
          <div class="md:col-span-1 flex flex-col justify-center items-center aspect-square bg-principal">
            <img class="w-36" src={img} alt={alt} />
          </div>
          <div class="md:col-span-1 flex flex-col justify-center items-center gap-3 aspect-square bg-principal">
            <h3 class="font-cinzel text-xl font-semibold tracking-wider text-dorado">
              {title}
            </h3>
            <p class="font-playfair font-thin text-gris">{description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
